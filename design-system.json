{
    "name": "Guided Component Architect — Design System",
    "version": "3.0.0",
    "theme": "light",
    "tokens": {
        "colors": {
            "primary": "#6366f1",
            "primaryHover": "#4f46e5",
            "primaryLight": "#eef2ff",
            "background": "#ffffff",
            "backgroundAlt": "#f8fafc",
            "surface": "#ffffff",
            "border": "#e2e8f0",
            "text": "#0f172a",
            "textSecondary": "#475569",
            "textMuted": "#94a3b8",
            "success": "#16a34a",
            "danger": "#dc2626",
            "warning": "#d97706",
            "glassBg": "rgba(255,255,255,0.1)"
        },
        "borderRadius": {
            "default": "8px",
            "sm": "4px",
            "md": "8px",
            "lg": "12px",
            "xl": "16px",
            "full": "9999px"
        },
        "typography": {
            "fontFamily": "Inter, sans-serif",
            "fontSizeSm": "12px",
            "fontSizeBase": "14px",
            "fontSizeMd": "16px",
            "fontSizeLg": "20px",
            "fontSizeXl": "24px",
            "fontWeightNormal": 400,
            "fontWeightMedium": 500,
            "fontWeightSemibold": 600,
            "fontWeightBold": 700
        },
        "spacing": {
            "1": "4px",
            "2": "8px",
            "3": "12px",
            "4": "16px",
            "5": "20px",
            "6": "24px",
            "8": "32px",
            "10": "40px",
            "12": "48px"
        },
        "shadows": {
            "xs": "0 1px 2px rgba(15,23,42,0.06)",
            "sm": "0 2px 8px rgba(15,23,42,0.08)",
            "md": "0 4px 16px rgba(15,23,42,0.10)",
            "lg": "0 8px 32px rgba(15,23,42,0.12)",
            "xl": "0 16px 48px rgba(15,23,42,0.16)"
        },
        "components": {
            "button": {
                "bg": "#6366f1",
                "bgHover": "#4f46e5",
                "text": "#ffffff",
                "radius": "8px",
                "padding": "10px 20px",
                "fontWeight": 600
            },
            "input": {
                "border": "#e2e8f0",
                "borderFocus": "#6366f1",
                "radius": "8px",
                "padding": "10px 14px",
                "background": "#ffffff"
            },
            "card": {
                "background": "#ffffff",
                "border": "#e2e8f0",
                "radius": "8px",
                "shadow": "0 2px 8px rgba(15,23,42,0.08)"
            }
        }
    },
    "glassmorphism": {
        "background": "rgba(255,255,255,0.1)",
        "backdropFilter": "blur(12px)",
        "border": "1px solid rgba(255,255,255,0.2)"
    },
    "rules": [
        "Use ONLY the design tokens defined in this JSON — do not introduce new colors, fonts, or radius values",
        "primaryColor is #6366f1 — use exclusively for CTAs, highlights, and active states",
        "borderRadius must be 8px for all interactive elements (buttons, inputs, cards)",
        "fontFamily must be Inter, sans-serif — applied globally",
        "glassBg rgba(255,255,255,0.1) is used for glassmorphism overlays only",
        "All components must be Angular 17+ standalone with standalone: true",
        "Use Tailwind CSS classes for layout — no raw inline style attributes",
        "Ensure responsive layout behavior and accessible semantic HTML",
        "All HTML tags must be properly closed and brackets balanced",
        "Output must be syntactically valid TypeScript — no missing brackets or decorators"
    ]
}